
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewOrder</title>
    <script src="~/lib/layui/layui.js"></script>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        * {
            margin: 0 auto
        }
    </style>
</head>
<body>

    <div>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 30px;">
            <legend>订单：@ViewBag.Order.Oid 详情</legend>
        </fieldset>
        <ul class="layui-timeline" style="margin-left:35%">
            <li class="layui-timeline-item">
                <i class="layui-icon layui-timeline-axis"></i>
                <div class="layui-timeline-content layui-text">
                    <h3 class="layui-timeline-title">订单发布</h3>
                    <p>
                        订单发起方：@ViewBag.Order.EnterpriseName
                        <br>负责人：@ViewBag.Order.Enterpriser
                        <br>订单类别：@ViewBag.Order.Category
                        <br /> 数量：@ViewBag.Order.Num @ViewBag.Order.Unit
                    </p>
                </div>
            </li>
            @if (!string.IsNullOrEmpty(ViewBag.Order.Receiver))
            {
                <li class="layui-timeline-item">
                    <i class="layui-icon layui-timeline-axis"></i>
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">订单执行人：@ViewBag.Order.Receiver</h3>
                        <p>订单已被 @ViewBag.Order.Receiver 接取</p>
                    </div>
                </li>
            }
            <li class="layui-timeline-item">
                <i class="layui-icon layui-timeline-axis"></i>
                <div class="layui-timeline-content layui-text">
                    <h3 class="layui-timeline-title">状态</h3>
                    <p>
                        @if (ViewBag.Order.Status == 1)
                        {
                            <span style="color: #F581B1;">未接单</span>
                        }
                        else if (ViewBag.Order.Status == 2)
                        {
                            <span style="color:orangered">进行中</span>
                        }
                        else if (ViewBag.Order.Status == 3)
                        {
                            <span style="color:greenyellow">已完成</span>
                        }
                        else if (ViewBag.Order.Status == 4)
                        {
                            <span style="color:red">撤销申请中</span>
                        }
                        else if (ViewBag.Order.Status == 5)
                        {
                            <span style="color:red">已驳回撤销申请</span>
                        }
                        else if (ViewBag.Order.Status == 6)
                        {
                            <span style="color:red">已撤销</span>
                        }
                    </p>
                </div>
            </li>
        </ul>
    </div>

</body>
</html>
